<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    color: #6a6a6a;
    text-align: center;
    margin: 2rem 3rem 0 0;
  }
  .filter.active {
    font-weight: bold;
    color: black;
    text-decoration: underline;
  }
  .filter:hover {
    color: black;
    cursor: pointer;
    text-decoration: underline;
  }
  .icons {
    font-size: 1.5rem;
  }
</style>

<body>
  <div id="home_page">
    <div id="filters">
      <a href="/listings/?category=trending">
        <div class="filter">
          <div class="icons"><i class="fa-brands fa-gripfire"></i></div>
          <p>Trending</p>
        </div>
      </a>
      <a href="/listings/?category=rooms">
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-house-user"></i></div>
          <p>Rooms</p>
        </div>
      </a>
      <a href="/listings/?category=beachfront">
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beachfront</p>
        </div>
      </a>
      <div class="filter">
        <div class="icons"><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div class="icons"><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div class="icons"><i class="fa-solid fa-sailboat"></i></div>
        <p>Boat House</p>
      </div>
      <div class="filter">
        <div class="icons"><i class="fa-solid fa-golf-ball-tee"></i></div>
        <p>Golfing</p>
      </div>
      <div class="filter">
        <div class="icons"><i class="fa-solid fa-mountain"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div class="icons"><i class="fa-solid fa-place-of-worship"></i></div>
        <p>Palaces</p>
      </div>
      <div class="filter">
        <div class="icons"><i class="fa-solid fa-water"></i></div>
        <p>Water House</p>
      </div>
    </div>

    <% if (category == undefined) { %>
    <div id="heading">
      <h1 style="border-radius: 20px">✨ V i l l a ' s ✨</h1>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for (listings of listing) { %>
      <a href="/listings/<%= listings._id %>">
        <div class="card col listing-card">
          <img
            src="<%= listings.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 27rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h2 class="element">
              Title:
              <div id="heading2"><%= listings.title %></div>
            </h2>
            <!-- <p class="element">
              <b> Discription: </b> <%= listings.description %>
            </p> -->
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <b>Price: </b>
              &#x20b9; <%= listings.price.toLocaleString("en-IN") %> per night
            </li>
            <!-- <li class="list-group-item">
              <b>Location: </b> <%= listings.location %>
            </li> -->
            <li class="list-group-item">
              <b>Country: </b> <%= listings.country %>
            </li>
          </ul>
        </div>
      </a>
      <% } %> <% } else {%>

      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (listings of filterListing) { %>
        <a href="/listings/<%= listings._id %>">
          <div class="card col listing-card">
            <img
              src="<%= listings.image.url %>"
              class="card-img-top"
              alt="listing_image"
              style="height: 27rem"
            />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h2 class="element">
                Title:
                <div id="heading2"><%= listings.title %></div>
              </h2>
              <!-- <p class="element">
                      <b> Discription: </b> <%= listings.description %>
                    </p> -->
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <b>Price: </b>
                &#x20b9; <%= listings.price.toLocaleString("en-IN") %> per night
              </li>
              <!-- <li class="list-group-item">
                      <b>Location: </b> <%= listings.location %>
                    </li> -->
              <li class="list-group-item">
                <b>Country: </b> <%= listings.country %>
              </li>
            </ul>
          </div>
        </a>
        <% } %>
      </div>
      <% } %>
    </div>
    <form action="/listings/new" method="GET">
      <button id="create_btn">Create New!!</button>
    </form>
  </div>
</body>
